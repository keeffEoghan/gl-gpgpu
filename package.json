{
  "name": "@epok.tech/gl-gpgpu",
  "version": "0.7.0",
  "description": "GPGPU state-stepping - declaratively maps optimal draw passes, shaders, WebGL resources, inputs, outputs - lets you focus on your logic, BYO-renderer.",
  "repository": "https://github.com/keeffEoghan/gl-gpgpu",
  "author": "Eoghan O'Keeffe <epok.tech@gmail.com> (https://epok.tech)",
  "license": "MIT",
  "engines": {
    "node": "v16.13.0 || *",
    "yarn": "3.1.0 || *"
  },
  "packageManager": "yarn@3.1.0",
  "scripts": {
    "start": "yarn dist:safe",
    "dev": "parcel --target docs --log-level verbose",
    "dev:safe": "yarn dev --no-cache",
    "dist": "yarn clean && (yarn build & yarn docs & wait)",
    "dist:safe": "yarn clean && (yarn build:safe & yarn docs:safe & wait)",
    "build": "parcel build $(yarn list:src | xargs) --target esm --target cjs",
    "build:safe": "yarn build --no-cache",
    "docs": "yarn docs:demo & yarn docs:info & wait",
    "docs:safe": "yarn docs:demo:safe & yarn docs:info & wait",
    "docs:demo": "parcel build --target docs",
    "docs:demo:safe": "yarn docs:demo --no-cache",
    "docs:info": "typedoc $(yarn list:src | xargs) && mv ./docs/api/.nojekyll ./docs/.nojekyll",
    "list:all": "find ./src -not -type d",
    "list:src": "yarn list:all | grep -i -E '\\.(js|ts)$'",
    "clean": "yarn clean:build & yarn clean:docs & wait",
    "clean:build": "rm -rf ./cjs/ ./esm/",
    "clean:docs": "rm -rf ./docs/"
  },
  "dependencies": {
    "@epok.tech/fn-lists": "^0.1.4",
    "@epok.tech/gl-screen-triangle": "^1.2.1",
    "@epok.tech/is-type": "^0.1.0",
    "@thi.ng/vectors": "^7.1.1"
  },
  "devDependencies": {
    "@epok.tech/fn-time": "^0.2.1",
    "@epok.tech/glsl-aspect": "^1.0.3",
    "@epok.tech/glsl-verlet": "^0.1.1",
    "@parcel/transformer-glsl": "2.7.0",
    "clamp": "^1.0.1",
    "glsl-conditionals": "^1.0.0",
    "glsl-constants": "^1.0.0",
    "glsl-map": "^1.0.1",
    "glsl-random": "^0.0.5",
    "parcel": "^2.7.0",
    "postcss": "^8.1.0",
    "postcss-import": "^15.0.0",
    "postcss-nesting": "^10.1.10",
    "postcss-url": "^10.1.3",
    "regl": "^2.1.0",
    "typedoc": "^0.23.16",
    "typedoc-theme-hierarchy": "^3.0.0",
    "typescript": "^4.8.2"
  },
  "main": "cjs/index.js",
  "module": "esm/index.js",
  "files": [
    "src/**/*",
    "cjs/**/*",
    "esm/**/*",
    "demo/**/*"
  ],
  "targets": {
    "cjs": {
      "outputFormat": "commonjs",
      "isLibrary": true,
      "optimize": true,
      "engines": {
        "browsers": "last 2 versions, > 0.5%, not dead"
      },
      "distDir": "cjs/",
      "publicUrl": "cjs/"
    },
    "esm": {
      "outputFormat": "esmodule",
      "isLibrary": true,
      "optimize": true,
      "engines": {
        "browsers": "last 2 versions, > 0.5%, not dead"
      },
      "distDir": "esm/",
      "publicUrl": "esm/"
    },
    "docs": {
      "isLibrary": false,
      "engines": {
        "browsers": "last 2 versions, > 0.5%, not dead"
      },
      "source": "demo/particles-regl/index.html",
      "distDir": "docs/",
      "publicUrl": "./"
    }
  },
  "keywords": [
    "glsl",
    "webgl",
    "shader",
    "gpgpu",
    "compute",
    "particles",
    "regl"
  ]
}
