{
  "name": "@epok.tech/gl-gpgpu",
  "version": "0.6.6",
  "description": "GPGPU state-stepping - maps optimal draw passes, shaders, GL resources, inputs, outputs; lets you focus on your logic - BYORenderer.",
  "repository": "https://github.com/keeffEoghan/gl-gpgpu",
  "author": "Eoghan O'Keeffe <epok.tech@gmail.com> (https://epok.tech)",
  "license": "MIT",
  "engines": {
    "node": "v16.13.0 || *",
    "yarn": "3.1.0 || *"
  },
  "packageManager": "yarn@3.1.0",
  "scripts": {
    "start": "yarn docs",
    "dev": "parcel --log-level verbose --target docs",
    "dist": "yarn build & yarn docs & wait",
    "build": "rm -rf ./dist/ && parcel build --target esm --target cjs",
    "docs": "rm -rf ./docs/ && (yarn run docs:demo & yarn run docs:info & wait)",
    "docs:demo": "parcel build --target docs",
    "docs:info": "yarn docs:info:jsdoc & yarn docs:info:jsdoc2md & yarn docs:info:dox & wait",
    "docs:info:jsdoc": "mkdir -p ./docs/ && jsdoc $(ls ./{package.json,{*,{index-forms,lookup,util}/**/*}.{js,glsl}} | xargs) -d ./docs/readme-jsdoc",
    "docs:info:jsdoc2md": "mkdir -p ./docs/ && jsdoc2md --files='./{*,{index-forms,lookup,util}/**/*}.{js,glsl}' package.json --no-cache --name-format --separators -m grouped -g grouped > ./docs/readme-jsdoc2md.md",
    "docs:info:dox": "mkdir -p ./docs/ && doxdox './{package.json,{*,{index-forms,lookup,util}/**/*}.{js,glsl}}' --layout markdown --output ./docs/readme-dox.md",
    "dev:safe": "yarn dev --no-cache",
    "dist:safe": "yarn build:safe & yarn docs:safe & wait",
    "build:safe": "yarn build --no-cache",
    "docs:safe": "yarn docs --no-cache"
  },
  "dependencies": {
    "@epok.tech/fn-lists": "^0.1.4",
    "@epok.tech/gl-screen-triangle": "^1.2.1",
    "@epok.tech/is-type": "^0.1.0",
    "@thi.ng/vectors": "^7.1.1"
  },
  "devDependencies": {
    "@epok.tech/fn-time": "^0.2.1",
    "@epok.tech/glsl-aspect": "^1.0.3",
    "@epok.tech/glsl-verlet": "^0.1.1",
    "@parcel/transformer-glsl": "^2.0.1",
    "autoprefixer": "^10.4.0",
    "clamp": "^1.0.1",
    "doxdox": "^3",
    "glsl-conditionals": "^1.0.0",
    "glsl-constants": "^1.0.0",
    "glsl-map": "^1.0.1",
    "glsl-random": "^0.0.5",
    "jsdoc": "^3.6.10",
    "jsdoc-to-markdown": "^7.1.1",
    "parcel": "^2.0.1",
    "postcss": "^8.0.0",
    "postcss-import": "^14.0.2",
    "postcss-nesting": "^10.0.2",
    "postcss-url": "^10.1.3",
    "regl": "^2.1.0"
  },
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "source": [
    "const.js",
    "index.js",
    "inputs.js",
    "macros.js",
    "maps.js",
    "state.js",
    "step.js",
    "size.js",
    "index.vert.js",
    "index-forms/index.js",
    "index-forms/index-entries.glsl.js",
    "index-forms/index-states.glsl.js",
    "lookup/index-uv.glsl.js",
    "lookup/offset-uv.glsl.js",
    "util/remain-div.glsl.js"
  ],
  "files": [
    "*.js",
    "dist/**/*",
    "index-forms/**/*",
    "lookup/**/*",
    "util/**/*"
  ],
  "targets": {
    "cjs": {
      "outputFormat": "commonjs",
      "isLibrary": true,
      "engines": {
        "browsers": "last 2 versions, > 0.5%, not dead"
      },
      "distDir": "dist/cjs/",
      "publicUrl": "dist/cjs/"
    },
    "esm": {
      "outputFormat": "esmodule",
      "isLibrary": true,
      "engines": {
        "browsers": "last 2 versions, > 0.5%, not dead"
      },
      "distDir": "dist/esm/",
      "publicUrl": "dist/esm/"
    },
    "docs": {
      "isLibrary": false,
      "engines": {
        "browsers": "last 2 versions, > 0.5%, not dead"
      },
      "source": "demo/particles-regl/index.html",
      "distDir": "docs/",
      "publicUrl": "./"
    }
  },
  "keywords": [
    "glsl",
    "webgl",
    "shader",
    "gpgpu",
    "compute",
    "particles",
    "regl"
  ]
}
